{
  "name": "sub-rosa",
  "productName": "sub-rosa",
  "version": "1.0.0",
  "description": "My Electron application description",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexthemonk/Sub-Rosa.git"
  },
  "main": "src/app.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "alexthemonk",
    "email": "liushucheng9661@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Sub-Rosa",
        "osxSign": true,
        "comment": "TODO: need to generate Apple developer id"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "platforms": [
              "darwin"
            ]
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "certificateFile": "./cert.pfx",
            "certificatePassword": "this-is-a-secret",
            "comment": "TODO: need to generate windows certificate"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "maintainer": "Alex Liu",
              "homepage": "https://example.com"
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "sudo-prompt": "^9.1.1",
    "update-electron-app": "^1.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.50",
    "@electron-forge/maker-deb": "^6.0.0-beta.50",
    "@electron-forge/maker-dmg": "^6.0.0-beta.50",
    "@electron-forge/maker-rpm": "^6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
    "@electron-forge/maker-zip": "^6.0.0-beta.50",
    "electron": "8.2.0"
  }
}
